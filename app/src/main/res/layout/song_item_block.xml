<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#282828"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#282828"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSong"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/tittleSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0003DAC5"
                android:padding="3dp"
                android:text="@string/tittlePlaylist"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/autorSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0003DAC5"
                android:padding="3dp"
                android:text="@string/followersPlaylist"
                android:textAlignment="textStart"
                android:textColor="#616161" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/btnFavoriteSong"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:button="@drawable/sl_favourite"
                app:buttonTint="@android:color/white"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                />

            <CheckBox
                android:id="@+id/btnBlockSong"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:button="@drawable/ic_block"
                app:buttonTint="@android:color/white"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                />

            <CheckBox
                android:id="@+id/btnOptionsSong"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:button="@drawable/ic_menu_dots"
                app:buttonTint="@android:color/white"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>